@model UsersModel
<div id="top">
    <form asp-action="SignUp" method="post" class="form-horizontal" role="form">
        <div class="card-body">
            <div class="form-group row">
                <label for="inputEmail3" class="col-sm-2 control-label">Email</label>
                <div class="col-sm-10">
                    <input required type="email" asp-for="Email" class="form-control" id="inputEmail3" placeholder="Email">
                </div>
            </div>
            <div class="form-group row">
                <label for="inputEmail3" class="col-sm-2 control-label">Full Name</label>
                <div class="col-sm-10">
                    <input required type="text" asp-for="FullName" class="form-control" id="inputEmail3" placeholder="Full Name">
                </div>
            </div>
            <div class="form-group row">
                <label for="inputPassword3" class="col-sm-2 control-label">Password</label>
                <div class="col-sm-10">
                    <input required type="password" asp-for="Password" class="form-control" id="inputPassword3" placeholder="Password">
                </div>
            </div>
        </div>
        <div class="card-footer">
            <input type="submit" class="btn btn-info" value="SignUp" />
        </div>
    </form>
    <form asp-action="Loging" method="post" role="form" class="form-horizontal">
        <div class="card-body">
            <div class="form-group row">
                <label for="inputEmail3" class="col-sm-2 control-label">Email</label>
                <div class="col-sm-10">
                    <input required asp-for="Email" type="email" class="form-control" id="inputEmail3" placeholder="Email">
                </div>
            </div>
            <div class="form-group row">
                <label for="inputPassword3" class="col-sm-2 control-label">Password</label>
                <div class="col-sm-10">
                    <input required asp-for="Password" type="password" class="form-control" id="inputPassword3" placeholder="Password">
                </div>
            </div>
        </div>
        <div class="card-footer">
            <input type="hidden" asp-for="ReturnUrl"/>
            <input type="submit" class="btn btn-info" value="Login" />
            <a class="btn btn-info" asp-action="LogOut">LogOut</a>
        </div>
    </form>
</div>